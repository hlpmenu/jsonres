{
    "$schema": "https://golangci-lint.run/jsonschema/golangci.jsonschema.json",
    "linters": {
        "fast": true,
        "enable": [
            "gocritic",
            "gosec",
            "perfsprint",
            "misspell",
            "revive",
            "prealloc",
            "errname"
        ]
    },
    "run": {
        "go": "1.24.0"
    },
    "linters-settings": {
        "revive": {
            "rules": [
                {
                    "name": "var-naming",
                    "disabled": true
                }
            ]
        }
    },
    "issues": { "exclude": [ "G114" ] }
}